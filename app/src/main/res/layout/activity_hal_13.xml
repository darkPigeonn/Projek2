<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_medula">
    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/jingleberry"
            android:gravity="center_horizontal"
            android:justificationMode="inter_word"
            android:text="Medula"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="45dp" />
    </LinearLayout>

    <ScrollView
        android:layout_below="@+id/ln1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ln2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ln1"
                android:orientation="vertical"
                android:padding="15dp">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="175dp"
                        android:background="@drawable/oval"
                        android:orientation="vertical"
                        android:padding="9dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="171dp"
                            android:fontFamily="@font/alata_regular"

                            android:text="@string/medula"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="122dp"
                        android:layout_height="match_parent"
                        android:lineSpacingExtra="5dp"
                        android:padding="2dp"
                        android:src="@drawable/a_39" />
                </TableRow>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background=""
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="359dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/img_medula" />

                            <TextView
                                android:layout_width="157dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="170dp"
                                android:text="Sumber :
https://www.kenhub.com/en/library/anatomy/kidney-histology"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                            <FrameLayout
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="180dp"
                                android:layout_marginTop="180dp">

                                <ImageButton
                                    android:id="@+id/b_nefron"
                                    android:layout_width="100dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/a_42" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/alata_regular"
                                    android:text="Nefron"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="20sp" />
                            </FrameLayout>
                        </FrameLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="518dp"
                            android:layout_marginTop="50dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="70dp"
                                android:layout_marginTop="50dp"
                                android:src="@drawable/img_nef"></ImageView>

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp">

                                <TextView
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/button_funginjal"
                                    android:fontFamily="@font/nowregular"
                                    android:gravity="center"
                                    android:justificationMode="inter_word"
                                    android:onClick="btn_tub_pro"
                                    android:padding="2dp"
                                    android:text="Tubulus Kontortus Proksimal"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp">

                                <TextView
                                    android:layout_width="96dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="60dp"
                                    android:background="@drawable/button_funginjal"
                                    android:fontFamily="@font/nowregular"
                                    android:gravity="center"
                                    android:justificationMode="inter_word"
                                    android:onClick="btn_kap_bow"
                                    android:text="Kapsula Bowman"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="81dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="200dp"
                                    android:layout_marginTop="50dp"
                                    android:background="@drawable/button_funginjal"
                                    android:fontFamily="@font/nowregular"
                                    android:gravity="center"
                                    android:justificationMode="inter_word"
                                    android:onClick="btn_pembuluh"
                                    android:text="Pembuluh Kapiler"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_height="64dp"
                                    android:layout_marginTop="130dp"
                                    android:background="@drawable/button_funginjal"
                                    android:fontFamily="@font/nowregular"
                                    android:gravity="center"
                                    android:justificationMode="inter_word"
                                    android:onClick="btn_glomerolus"
                                    android:text="Glomerolus"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="81dp"
                                    android:layout_height="92dp"
                                    android:layout_marginLeft="230dp"
                                    android:layout_marginTop="120dp"
                                    android:background="@drawable/button_funginjal"
                                    android:fontFamily="@font/nowregular"
                                    android:gravity="center"
                                    android:justificationMode="inter_word"
                                    android:onClick="btn_tub_dis"
                                    android:text="Tubulus Kontortus Distal"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="99dp"
                                    android:layout_height="64dp"
                                    android:layout_marginLeft="55dp"
                                    android:layout_marginTop="220dp"
                                    android:background="@drawable/button_funginjal"
                                    android:fontFamily="@font/nowregular"
                                    android:gravity="center"
                                    android:justificationMode="inter_word"
                                    android:onClick="btn_henle"
                                    android:text="Lengkung Henle"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="71dp"
                                    android:layout_height="72dp"
                                    android:layout_marginLeft="160dp"
                                    android:layout_marginTop="250dp"
                                    android:background="@drawable/button_funginjal"
                                    android:fontFamily="@font/nowregular"
                                    android:gravity="center"
                                    android:justificationMode="inter_word"
                                    android:onClick="btn_tub_kol"
                                    android:text="Tubulus Kolektivus"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="207dp"
                                    android:layout_height="64dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="290dp"
                                    android:fontFamily="@font/nowregular"
                                    android:gravity="center"
                                    android:justificationMode="inter_word"
                                    android:text="@string/nb_hal13"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="287dp"
                                    android:layout_height="52dp"
                                    android:layout_marginLeft="40dp"
                                    android:layout_marginTop="380dp"
                                    android:fontFamily="@font/nowregular"
                                    android:gravity="center"
                                    android:justificationMode="inter_word"
                                    android:text="Sumber :
https://www.kenhub.com/en/library/anatomy/kidney-histology
"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp">

                                <TextView
                                    android:layout_width="250dp"
                                    android:layout_height="34dp"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginTop="450dp"
                                    android:background="@drawable/button_funginjal"
                                    android:fontFamily="@font/atma_medium"
                                    android:gravity="center"
                                    android:justificationMode="inter_word"
                                    android:text="PROSES PEMBENTUKAN URINE"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp">

                                <TextView
                                    android:layout_width="250dp"
                                    android:layout_height="34dp"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginTop="480dp"
                                    android:fontFamily="@font/alata_regular"
                                    android:gravity="center"
                                    android:text="Klik pada bagian di atas untuk mengetahui lebih lanjut"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                            </TableRow>


                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

    </ScrollView>



    <LinearLayout
        android:id="@+id/ln3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="10dp"
        android:scaleX="1"
        android:scaleY="1">

        <ImageView
            android:id="@+id/b_bck"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:background="@drawable/button_back"></ImageView>
    </LinearLayout>

</RelativeLayout>
