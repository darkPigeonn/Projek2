<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:paddingTop="10dp"
        android:background="@drawable/hal29_back">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginLeft="110dp"
                android:fontFamily="@font/alata_regular"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="Cara Mengatasi"
                android:background="@drawable/hal29_con5"
                android:textColor="@color/black"
                android:textSize="22dp" />
        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="230dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/hal29_con4"
                    android:orientation="vertical">

                    <TableRow
                        android:layout_width="335dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata_regular"
                            android:gravity="center_horizontal"
                            android:padding="8dp"
                            android:text="@string/atasi_diabet_tp1"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="335dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="327dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/hal29_con1" />
                    </TableRow>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="230dp"
                    android:layout_marginTop="380dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/hal29_con4"
                    android:orientation="vertical">

                    <TableRow
                        android:layout_width="335dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata_regular"
                            android:gravity="center_horizontal"
                            android:padding="8dp"
                            android:text="@string/atasi_diabet_tp2"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="335dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="327dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/hal28_con12" />
                    </TableRow>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="650dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/hal29_con2"
                            android:layout_marginLeft="290dp">
                        </ImageView>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/hal29_con3"
                            android:layout_marginLeft="290dp"
                            android:layout_marginTop="100dp">
                        </ImageView>

                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="97dp"
                            android:layout_height="103dp"
                            android:layout_marginLeft="290dp"
                            android:layout_marginTop="220dp"
                            android:src="@drawable/hal_29"></pl.droidsonroids.gif.GifImageView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1."
                                    android:fontFamily="@font/alata_regular"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"></TextView>

                                <TextView
                                    android:layout_width="264dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/alata_regular"
                                    android:text="@string/atasi_diabet1"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"></TextView>

                            </TableRow>

                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2."
                                    android:fontFamily="@font/alata_regular"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"></TextView>

                                <TextView
                                    android:layout_width="264dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/alata_regular"
                                    android:text="@string/atasi_diabet2"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"></TextView>

                            </TableRow>

                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3."
                                    android:fontFamily="@font/alata_regular"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"></TextView>

                                <TextView
                                    android:layout_width="264dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/alata_regular"
                                    android:text="@string/atasi_diabet3"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"></TextView>

                            </TableRow>

                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4."
                                    android:fontFamily="@font/alata_regular"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"></TextView>

                                <TextView
                                    android:layout_width="264dp"
                                    android:layout_height="200dp"
                                    android:fontFamily="@font/alata_regular"
                                    android:text="@string/atasi_diabet4"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"></TextView>

                            </TableRow>
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

            </FrameLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginRight="120dp">

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="155dp"
            android:layout_height="60dp"
            android:src="@drawable/button_close"></ImageButton>
    </LinearLayout>

</RelativeLayout>

