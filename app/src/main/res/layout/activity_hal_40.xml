<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hal40_back">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/atma_medium"
                android:text="FUNGSI HATI"
                android:textColor="@color/black"
                android:textSize="40sp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="220dp"
                    android:background="@drawable/hal26_con2"
                    android:paddingHorizontal="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/alata_regular"
                        android:text="@string/fun_hati"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="88dp"
                            android:layout_height="42dp"
                            android:background="@drawable/hal40_2"
                            android:fontFamily="@font/atma_medium"
                            android:gravity="center_vertical"
                            android:text="EMPEDU"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            tools:ignore="RtlCompat" />

                        <TextView
                            android:layout_width="146dp"
                            android:layout_height="42dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/hal40_2"
                            android:fontFamily="@font/atma_medium"
                            android:gravity="center_vertical"
                            android:text="ENZIM ARIGASE"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            tools:ignore="RtlCompat" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="42dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/hal40_2"
                            android:fontFamily="@font/atma_medium"
                            android:gravity="center_vertical"
                            android:text="ALBUMIN"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            tools:ignore="RtlCompat" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                        <TextView
                            android:layout_width="169dp"
                            android:layout_height="42dp"
                            android:background="@drawable/hal40_2"
                            android:fontFamily="@font/atma_medium"
                            android:gravity="center_vertical"
                            android:text="TROMBOPOIETIN"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            tools:ignore="RtlCompat" />

                        <TextView
                            android:layout_width="169dp"
                            android:layout_height="42dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/hal40_2"
                            android:fontFamily="@font/atma_medium"
                            android:gravity="center_vertical"
                            android:text="ANGIOTENSINOGEN"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            tools:ignore="RtlCompat" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata_regular"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                           android:textAlignment="center"
                            android:text="Klik untuk mengetahui lebih lanjut"/>
                    </TableRow>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="240dp"
                            android:layout_height="278dp"
                            android:background="@drawable/hal40_1"
                            android:orientation="vertical">

                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="30dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/alata_regular"
                                    android:text="1."
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="203dp"
                                    android:layout_height="120dp"
                                    android:fontFamily="@font/alata_regular"
                                    android:text="@string/fun_hati1"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="85dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="20dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/alata_regular"
                                    android:text="2."
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="203dp"
                                    android:layout_height="85dp"
                                    android:fontFamily="@font/alata_regular"
                                    android:text="@string/fun_hati2"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </TableRow>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <pl.droidsonroids.gif.GifImageView
                                android:layout_width="127dp"
                                android:layout_height="106dp"
                                android:layout_marginTop="50dp"
                                android:layout_marginLeft="245dp"
                                android:src="@drawable/organ_hati" />




                        </LinearLayout>


                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">

                        <ImageButton
                            android:id="@+id/b_ganggu_hati"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/hal40_3"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="25dp"
                            android:fontFamily="@font/bobbyjonesoft"
                            android:text="GANGGUAN PADA HATI"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="25sp" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:textAlignment="center"
                        android:layout_marginLeft="105dp"
                        android:fontFamily="@font/alata_regular"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="Klik untuk mengetahui lebih lanjut"/>
                </LinearLayout>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="10dp"
        android:scaleX="1"
        android:scaleY="1">

        <ImageView
            android:id="@+id/b_bck"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:background="@drawable/button_back"></ImageView>
    </LinearLayout>

</RelativeLayout>
