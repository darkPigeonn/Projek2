<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ginjal">

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/jingleberry"
            android:gravity="center_horizontal"
            android:justificationMode="inter_word"
            android:text="GINJAL"
            android:textColor="#082a44"
            android:textSize="55dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ln1"
        android:layout_marginTop="74dp">

        <LinearLayout
            android:id="@+id/ln2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ln1"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="192dp"
                    android:layout_height="535dp"
                    android:background="@drawable/content_ginjal"
                    android:orientation="vertical">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="192dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="6dp"
                            android:fontFamily="@font/mulibold"
                            android:padding="9dp"
                            android:text="@string/ginjal"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="178dp"
                        android:layout_height="111dp"
                        android:layout_marginLeft="8dp">

                        <ImageView
                            android:layout_width="138dp"
                            android:layout_height="106dp"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/img_ginjal" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="178dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="6dp"
                            android:fontFamily="@font/alata_regular"
                            android:padding="0dp"
                            android:text="@string/sumber_ginjal"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </TableRow>
                </LinearLayout>


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="211dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/tanya_organ"></ImageView>

                    <Button
                        android:layout_width="136dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="20dp"
                        android:background=""
                        android:fontFamily="@font/mulibold"
                        android:text="Berapakah ukuran ginjal kita?"
                        android:textColor="@color/black"></Button>

                    <TextView
                        android:layout_width="114dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="95dp"
                        android:layout_marginTop="190dp"
                        android:fontFamily="@font/mulibold"
                        android:text="@string/nb_hal6"
                        android:textColor="@color/black"
                        android:textSize="12sp">

                    </TextView>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="391dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="219dp"
                    android:layout_height="47dp"
                    android:background="@drawable/judul_materi"
                    android:fontFamily="@font/latoregular"
                    android:padding="8dp"
                    android:text="Struktur Ginjal"
                    android:textColor="#082a44"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="381dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="341dp"
                            android:layout_height="202dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/bagian_ginjal"></pl.droidsonroids.gif.GifImageView>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/btn_korteks"
                                    android:layout_width="89dp"
                                    android:layout_height="75dp"
                                    android:layout_marginLeft="20dp"
                                    android:fontFamily="@font/atma_medium"
                                    android:gravity="center"
                                    android:justificationMode="inter_word"
                                    android:text="Korteks"
                                    android:layout_gravity="clip_vertical"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:background="@drawable/content_ginjal2"/>



                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="55dp"
                            android:layout_marginLeft="295dp">
                            <TextView
                                android:id="@+id/btn_arteri"
                                android:layout_width="89dp"
                                android:layout_height="75dp"
                                android:layout_gravity="clip_vertical"

                                android:background="@drawable/content_ginjal2"
                                android:fontFamily="@font/atma_medium"
                                android:gravity="center"
                                android:justificationMode="inter_word"
                                android:text="Arteri"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="130dp"
                            android:layout_marginLeft="295dp">
                            <TextView
                                android:id="@+id/btn_vena"
                                android:layout_width="89dp"
                                android:layout_height="75dp"
                                android:layout_gravity="clip_vertical"

                                android:background="@drawable/content_ginjal2"
                                android:fontFamily="@font/atma_medium"
                                android:gravity="center"
                                android:justificationMode="inter_word"
                                android:text="Vena"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="250dp">

                            <ImageView
                                android:layout_width="54dp"
                                android:layout_height="84dp"
                                android:layout_marginTop="97dp"
                                android:rotation="40"
                                android:src="@drawable/ar_right" />
                        </TableRow>





                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="84dp"
                            android:layout_marginLeft="90dp"
                            android:src="@drawable/ar_left" />

                            <ImageView
                                android:layout_width="54dp"
                                android:layout_height="84dp"
                                android:layout_marginLeft="90dp"
                                android:layout_marginTop="60dp"
                                android:src="@drawable/ar_right" />


                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="70dp">

                            <TextView
                                android:id="@+id/btn_medula"
                                android:layout_width="89dp"
                                android:layout_height="75dp"
                                android:layout_gravity="clip_vertical"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/content_ginjal2"
                                android:fontFamily="@font/atma_medium"
                                android:gravity="center"
                                android:justificationMode="inter_word"
                                android:text="Medula"
                                android:textColor="@color/black"
                                android:textSize="15sp" />
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="70dp">

                            <ImageView
                                android:layout_width="59dp"
                                android:layout_height="84dp"
                                android:layout_marginLeft="90dp"
                                android:src="@drawable/ar_left" />
                        </TableRow>


                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="140dp">

                            <TextView
                                android:id="@+id/btn_pel_ren"
                                android:layout_width="104dp"
                                android:layout_height="107dp"
                                android:layout_gravity="clip_vertical"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/content_ginjal2"
                                android:fontFamily="@font/atma_medium"
                                android:gravity="center"
                                android:justificationMode="inter_word"
                                android:text="Pelvis Renalis"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                />
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="90dp">

                            <ImageView
                                android:layout_width="92dp"
                                android:layout_height="84dp"
                                android:layout_marginLeft="90dp"
                                android:src="@drawable/arr_big" />
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="160dp">

                            <ImageView
                                android:layout_width="59dp"
                                android:layout_height="84dp"
                                android:layout_marginLeft="220dp"
                                android:rotation="40"
                                android:src="@drawable/ar_right" />
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="205dp">

                            <TextView
                                android:id="@+id/btn_ureter"
                                android:layout_width="88dp"
                                android:layout_height="92dp"
                                android:layout_gravity="clip_vertical"
                                android:layout_marginLeft="260dp"
                                android:background="@drawable/content_ginjal2"
                                android:fontFamily="@font/atma_medium"
                                android:gravity="center"
                                android:justificationMode="inter_word"
                                android:text="Ureter"
                                android:textColor="@color/black"
                                android:textSize="20sp" />
                        </TableRow>




                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="115dp"
                            android:layout_marginTop="190dp">

                            <TextView
                                android:layout_width="129dp"
                                android:layout_height="92dp"
                                android:layout_marginLeft="4dp"
                                android:fontFamily="@font/alata_regular"
                                android:gravity="center"
                                android:text="Struktur Ginjal (Sumber : myrightspot.com)"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                        </TableRow>
                    </FrameLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="231dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="153dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata_regular"
                            android:padding="2dp"
                            android:text="@string/nb_hal6b"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </TableRow>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:padding="10dp"
                android:scaleX="1"
                android:scaleY="1">

                <TextView
                    android:id="@+id/b_fung_ginjal"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_funginjal"
                    android:fontFamily="@font/mulibold"
                    android:gravity="center"
                    android:text="FUNGSI GINJAL"
                    android:textColor="@color/black"
                    android:textSize="14sp"></TextView>

                <TextView
                    android:id="@+id/b_ganggu_ginjal"
                    android:layout_width="120dp"
                    android:layout_height="58dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_gangguginjal"
                    android:fontFamily="@font/mulibold"
                    android:gravity="center"
                    android:text="GANGGUAN PADA GINJAL"
                    android:textColor="@color/black"
                    android:textSize="14sp"></TextView>

                <TextView
                    android:id="@+id/b_proses_bentuk"
                    android:layout_width="132dp"
                    android:layout_height="84dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_proses"
                    android:fontFamily="@font/mulibold"
                    android:gravity="center"
                    android:text="PROSEES PEMBENTUKAN URINE"
                    android:textColor="@color/black"
                    android:textSize="14sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
android:layout_marginLeft="100dp"
                android:scaleX="1"
                android:scaleY="1">

                <TextView
                    android:layout_width="224dp"
                    android:layout_height="98dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/alata_regular"
                    android:gravity="center"
                    android:text="@string/nb_hal6c"
                    android:textColor="@color/black"
                    android:textSize="14sp"></TextView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
