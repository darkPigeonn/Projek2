<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hal46_back">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:textSize="40sp"
                android:fontFamily="@font/bobbyjonesoft"
                android:textColor="#90d6e1"
                android:text="GANGGUAN PADA HATI"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="157dp"
                            android:layout_height="160dp"
                            android:src="@drawable/hal46_1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="220dp"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:fontFamily="@font/alata_regular"
                            android:gravity="center_vertical"
                            android:text="@string/con_gangguan_hati"
                            android:textAlignment="center"
                            android:layout_marginVertical="5dp"
                            android:background="@drawable/hal46_6"
                            tools:ignore="RtlCompat" />
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="70dp">
                        <TextView
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:fontFamily="@font/jingleberry"
                            android:gravity="center_vertical"
                            android:text="Gejala dan Penyebab"
                            android:textAlignment="center"
                            android:layout_marginVertical="5dp"
                            android:background="@drawable/judul_materi"
                            tools:ignore="RtlCompat" />
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="100dp">
                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="65dp"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:fontFamily="@font/jingleberry"
                            android:gravity="center_vertical"
                            android:text="Pengobatan"
                            android:textAlignment="center"
                            android:layout_marginVertical="5dp"
                            android:background="@drawable/hal46_3"
                            tools:ignore="RtlCompat" />
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="100dp">
                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="65dp"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/alata_regular"
                            android:gravity="center_vertical"
                            android:text="@string/nb_hal6c"
                            android:textAlignment="center"
                            android:layout_marginVertical="5dp"
                            tools:ignore="RtlCompat" />
                    </TableRow>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="600dp"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp">
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="116dp"
                            android:layout_height="133dp"
                            android:src="@drawable/hal46_4" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="220dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:fontFamily="@font/alata_regular"
                            android:gravity="center_vertical"
                            android:text="@string/con_gangguan_hati2"
                            android:textAlignment="center"
                            android:layout_marginVertical="5dp"
                            android:background="@drawable/hal46_6"
                            tools:ignore="RtlCompat" />
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="70dp">
                        <TextView
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:fontFamily="@font/jingleberry"
                            android:gravity="center_vertical"
                            android:text="Gejala dan Penyebab"
                            android:textAlignment="center"
                            android:layout_marginVertical="5dp"
                            android:background="@drawable/judul_materi"
                            tools:ignore="RtlCompat" />
                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:layout_width="103dp"
                            android:layout_height="109dp"
                            android:src="@drawable/hal46_5" />
                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="65dp"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:fontFamily="@font/jingleberry"
                            android:gravity="center_vertical"
                            android:text="Pengobatan"
                            android:textAlignment="center"
                            android:layout_marginVertical="5dp"
                            android:background="@drawable/hal46_2"
                            tools:ignore="RtlCompat" />

                    </TableRow>
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="100dp">
                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="65dp"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/alata_regular"
                            android:gravity="center_vertical"
                            android:text="@string/nb_hal6c"
                            android:textAlignment="center"
                            android:layout_marginVertical="5dp"
                            tools:ignore="RtlCompat" />
                    </TableRow>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="5dp"
        android:scaleX="1"
        android:scaleY="1">

        <ImageView
            android:id="@+id/b_menu_materi"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/button_menu"></ImageView>

        <ImageView
            android:id="@+id/b_home"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/button_home"></ImageView>

        <ImageView
            android:id="@+id/b_bck"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/button_back"></ImageView>
    </LinearLayout>
</RelativeLayout>