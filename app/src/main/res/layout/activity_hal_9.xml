<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ln2"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/content_pelvis"
                android:layout_marginBottom="80dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="367dp"
                        android:layout_height="305dp"
                        android:layout_marginLeft="9dp"
                        android:layout_marginTop="150dp"
                        android:fontFamily="@font/alata_regular"
                        android:gravity="center_horizontal"
                        android:padding="8dp"
                        android:text="@string/content_pelvis"
                        android:textColor="@color/black"
                        android:textSize="18dp" />


                    <FrameLayout
                        android:layout_width="382dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="500dp">

                        <ImageView
                            android:layout_width="341dp"
                            android:layout_height="202dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/img_pelvis" />

                        <TableRow
                            android:layout_width="116dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="1dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="116dp"
                                    android:layout_height="89dp"
                                    android:src="@drawable/content_ginjal2"></ImageView>

                                <TextView
                                    android:layout_width="95dp"
                                    android:layout_height="92dp"
                                    android:layout_marginLeft="4dp"
                                    android:fontFamily="@font/alata_regular"
                                    android:gravity="center"
                                    android:justificationMode="inter_word"
                                    android:text="Kaliks Major"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />
                            </FrameLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="116dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="265dp"
                            android:layout_marginTop="20dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="116dp"
                                    android:layout_height="89dp"
                                    android:src="@drawable/content_ginjal2"></ImageView>

                                <TextView
                                    android:layout_width="95dp"
                                    android:layout_height="92dp"
                                    android:layout_marginLeft="4dp"
                                    android:fontFamily="@font/alata_regular"
                                    android:gravity="center"
                                    android:justificationMode="inter_word"
                                    android:text="Kaliks Minor"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />
                            </FrameLayout>
                        </TableRow>


                        <TableRow
                            android:layout_width="116dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="90dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="90dp"
                                    android:src="@drawable/content_ginjal2"></ImageView>

                                <TextView
                                    android:layout_width="98dp"
                                    android:layout_height="92dp"
                                    android:layout_marginLeft="4dp"
                                    android:fontFamily="@font/alata_regular"
                                    android:gravity="center"
                                    android:justificationMode="inter_word"
                                    android:text="Pelvis Renalis"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />
                            </FrameLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="116dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="185dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="116dp"
                                    android:layout_height="89dp"
                                    android:src="@drawable/content_ginjal2"></ImageView>

                                <TextView
                                    android:layout_width="95dp"
                                    android:layout_height="92dp"
                                    android:layout_marginLeft="4dp"
                                    android:fontFamily="@font/alata_regular"
                                    android:gravity="center"
                                    android:justificationMode="inter_word"
                                    android:text="Ureter"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />
                            </FrameLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="115dp"
                            android:layout_marginTop="190dp">

                            <TextView
                                android:layout_width="209dp"
                                android:layout_height="92dp"
                                android:layout_marginLeft="24dp"
                                android:fontFamily="@font/alata_regular"
                                android:gravity="center"
                                android:text="Sumber : https://id.depositphotos.com/vector-images/ckd.html?qview=145325487"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                        </TableRow>
                    </FrameLayout>

                    <ImageButton
                        android:id="@+id/btn_close"
                        android:layout_width="165dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="109dp"
                        android:layout_marginTop="850dp"
                        android:src="@drawable/button_close"></ImageButton>
                </FrameLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>

